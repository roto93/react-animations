flexbox(direction, justifyContent, alignItems)
  display: flex
  flex-direction: direction
  justify-content: justifyContent
  align-items: alignItems

centerChild()
  display: flex
  justify-content: center
  align-items: center

tblr(top=0, bottom=0, left=0, right=0)
  top top
  bottom bottom
  left left
  right right

html, body, #root
  height:100vh
  min-height 100vh

.App 
  flexbox(column, flex-start,stretch)
  position relative
  width 100%
  height:100%

.container
  width 90%
  max-width: 800px 

.main
  margin-top: 68px
  position relative
  width 100%
  height 100%
  // height 1000px

.header 
  flexbox(row, space-between, center)
  position fixed
  background-color #bec5ad
  width 100%
  height: 68px


.header__container
  // border 1px solid #000
  width 90%
  max-width: 800px
  margin 0 auto

.header__title
  

.header__title__h2
  font-family 'Inder'

.nav__backdrop
  position absolute
  tblr()
  background-color #33333350

.nav
  flexbox(column, center, center)
  position fixed
  transform translate(50%,-50%)
  width 400px
  height 400px
  box-shadow: 0 0 4px #ccc
  overflow hidden
  border-radius: 24px
  background-color #f9fff9
  transition background-color 0.5s

  &.hide
    background-color #eeffee

.nav__ul
  flexbox(column, space-between, center)
  transition: opacity 0.6s ease-in-out
  &.hide
    opacity:0
    z-index -1

.nav__li
  user-select: none
  cursor pointer
  position relative
  centerChild()
  height: 50px
  border-radius: 8px
  font-family "Inder"
  padding 0 1.5em
  transition: color 0.2s
  &+&
    margin-top: 8px
  &:hover
    color:#fff

  &::before
  &::after
    content: ''
    position absolute
    width 100%
    height:48px
    background linear-gradient(30deg,#a4b494,#bec5ad)
    z-index: -1
    transform: translate(-5px,0) skewX(-15deg)
    opacity 0
    transition: 0.2s transform, opacity 0.5s
  &::after
    z-index -2
    transform: translate(-5px,0px) skewX(-15deg)
    background linear-gradient(30deg,#bec5ad,#a4b494)


  &:hover::before
    transform: translate(0px,0) skewX(-15deg)
    opacity 1

  &:hover::after
    transform: translate(5px,3px) skewX(-15deg)
    opacity 1


.nav__menuIcon
  user-select: none
  cursor pointer
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  transition: opacity 0.6s ease-in-out
  width 48px
  height 48px
  centerChild()
  &.hide
    transition: opacity 0.3s ease-in-out
    opacity:0
    z-index -1