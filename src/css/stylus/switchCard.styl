@import 'mixin.styl'

.switchCard
  width 100%
  height 100%

.switchCard__demo
  flexbox(row, center, center)
  width 100%
  height calc(100vh - 68px)
  background linear-gradient(90deg,#67B26F,#4ca2cd)

.switchCard__container
  flexbox(column, center, center)

.switchCard__cardContainer
  flexbox(column, flex-start, center)
  // border 1px solid #000
  width 100%
  margin 3em

.switchCard__card
  background linear-gradient(135deg, #eeeeee88,#aaaaaa88,#ffffff88)
  width 90%
  max-width: 500px
  height 650px
  border-radius 16px
  box-shadow: 2px 2px 10px #555

.switchCard__card__imgContainer
  width 100%
  aspect-ratio: 1
  flexbox(column, flex-start, center)
  margin 1.5em 0
  background-position: center center
  background-size: contain
  background-repeat: no-repeat

.switchCard__card__img
  // width 100%
  height: 100%
  border-radius 16px

.switchCard__card__name
.switchCard__card__description
  text-align: center
  margin 1em 2em

.switchCard__switchButton
  user-select: none
  cursor pointer
  padding 0.75em 1.5em
  background-color #dddbbb
  font-weight 700
  opacity 1
  text-transform: uppercase
  &:active
    opacity 0.5